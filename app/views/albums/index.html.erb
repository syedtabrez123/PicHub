<h1>Listing Albums</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.description %></td>
        <td><%= link_to 'Show', user_album_path(@user,album) %></td>
        <td><%#= link_to 'Edit', edit_user_album_path(@user, album) %></td>
        <td><%= link_to 'Destroy', user_album_path(@user,album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_user_album_path(@user, @album) %>
